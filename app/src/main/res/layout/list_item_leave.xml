<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_leave"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/one_dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/fifteen_dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sick"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/ll_from_date"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/ll_to_date"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/seven_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_type">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_from"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_from_date"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/one_dp"
            android:layout_height="wrap_content"
            android:text="12 Feb,19"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_to_date"
        android:layout_marginTop="@dimen/seven_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_type">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_to"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_to_date"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/one_dp"
            android:layout_height="wrap_content"
            android:text="15 Feb,19"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_reason"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/ten_dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_from_date"
        android:layout_height="wrap_content"
        android:text="Not feeling well, due to yellow fever"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>